{
  "manifest_version": 2,
  "name": "encrypted-facebook-messenger",
  "version": "1.0",
  "description": "Encrypts facebook messenger",
  // Change to page_action
  "browser_action": {
    "default_icon": "icon19.jpeg",
    "default_popup": "popup.html"
  },
  // Change persistent to true
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  // Content scripts. Add matches to messenger.com
  "content_scripts": [
  	{
  		"matches":["*://www.messenger.com/*"],
  		"js":["jquery.js","sjcl.js","content.js"],
  		"run_at": "document_start",
  		"all_frames": true
  	}
  ],
  // Change permission to messenger .com
  "permissions": ["<all_urls>"]
}